{
  "name": "onebox-email-backend",
  "version": "0.1.0",
  "description": "Backend for Onebox Email Aggregator (IMAP sync, ES search, AI categorization, webhooks, RAG)",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "setup": "npm ci && docker-compose up -d",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "seed": "ts-node scripts/seed-sample-emails.ts",
    "init-rag": "ts-node scripts/init-vector-db.ts",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.10.0",
    "@google/generative-ai": "^0.2.1",
    "@qdrant/js-client-rest": "^1.7.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "imapflow": "^1.0.164",
    "mailparser": "^3.6.5",
    "pg": "^8.11.3",
    "socket.io": "^4.6.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "imap",
    "email",
    "elasticsearch",
    "qdrant",
    "gemini",
    "node",
    "typescript"
  ],
  "license": "MIT"
}
